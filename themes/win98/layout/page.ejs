<article class="page-container" id="content-main">
    <% if (page.title && page.title.length > 0) { %>
        <h1><%- page.title %></h1>
        <hr>
    <% } %>
    <div class="page-body">
        <%- page.content %>
    </div>

    <% if (theme.gitalk && theme.gitalk.enable) { %>
      <div id="gitalk-container-placeholder" style="padding: 15px;">
          <p><i>评论区加载中...</i></p>
      </div>
    <% } %>
</article>
