<article class="win98-content" id="content-main">
  <h1><%- page.title %></h1>
  <% if (page.date) { %>
    <p class="post-meta">发布于: <%- date(page.date, config.date_format) %></p>
  <% } %>
  <hr>
  <div class="post-content">
    <%- page.content %>
  </div>
  <% if (theme.gitalk && theme.gitalk.enable) { %>
    <div id="gitalk-container-placeholder" style="padding: 15px;">
      <p><i>评论区加载中...</i></p>
    </div>
  <% } %>

</article>
